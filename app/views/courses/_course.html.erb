<tr>
  <td class="course">
    <span class="content"><%= course.content %></span>
    <span class="body"><%= course.body %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(course.created_at) %> ago.
    </span>
  </td>
  <% user = course.user rescue User.find(course.user_id) %>
  <% if current_user?(user) %>
  <td>
    <%= link_to "delete", course,    :method => :delete,
                                     :confirm => "Are you sure?",
                                     :title => course.content %>
  </td>
  <% end %>
</tr>